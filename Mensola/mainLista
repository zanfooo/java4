import mensola.Libro;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

import static utility.Tools.*;
import static frontScreen.FrontEnd.*;

public class Main {
    public static void main(String[] args) {
        Scanner tastiera = new Scanner(System.in);
        final int MAXLIBRI = 3;
        int libriDaInserire = 0;
        ArrayList<Libro> mensola = new ArrayList<>();
        String libroDaCancellare;
        boolean uscita = false;
        int cont = 0;
        do {
            String[] opzioni = {"---MENSOLA---", "1. Inserimento", "2. Visualizza","3. Cancella Elemento", "4. Fine"};
            int scelta = Menu(opzioni, tastiera);
            switch (scelta) {

                case 1 -> {
                    libriDaInserire = 0;
                    System.out.println("Quanti libri vuoi inserire?");
                    libriDaInserire = tastiera.nextInt();
                    Inserimento(tastiera, libriDaInserire, mensola);
                }
                case 2 -> {
                    mensola.forEach(l-> System.out.println(l.FormattaDati())); //Espressione Lambda

                }
                case 3 -> {
                    System.out.println("Digita il titolo del libro che vuoi rimuovere: ");
                    try{
                        libroDaCancellare = tastiera.nextLine();
                        CancellaLibro(libroDaCancellare,mensola);
                    }catch (Exception e){
                        System.out.println(e.getMessage());
                    }

                }
                case 4 -> {
                    System.out.println("Fine");
                    uscita = true;
                }
            }
        } while (!uscita);
    }
    public static void Inserimento(Scanner tastiera, int libriDaInserire, List<Libro> mensola) {

        for (int i = 0; i < libriDaInserire; i++) {
            // Aggiunta di elementi alla lista
            mensola.add(LeggiLibro(tastiera));
        }
    }

    public static void CancellaLibro(String libroDaCancellare, List<Libro> mensola) {
        boolean libroTrovato = mensola.removeIf(l -> l.Titolo.equalsIgnoreCase(libroDaCancellare));

        if (!libroTrovato) {
            System.out.println("Il libro \"" + libroDaCancellare + "\" non è stato trovato nella mensola.");
        } else {
            System.out.println("Il libro \"" + libroDaCancellare + "\" è stato cancellato.");
        }
    }
}
